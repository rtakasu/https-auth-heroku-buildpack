#!/usr/bin/env bash

ENV_DIR=${3:-}

user="$(cat $ENV_DIR/USER)"
token="$(cat $ENV_DIR/ACCESS_TOKEN)"

if [ "$user" == "" ];
then
	echo "-----> No User found"

elif [ "$token" == "" ];
then
	echo "-----> No Personal Access Token found"

else
	echo "-----> Running Personal Access setup"

  echo "[url \"https://$user:$token@github.com/\"]" >> "$HOME/.gitconfig"
  echo "  insteadOf = ssh://github.com/" >> "$HOME/.gitconfig"

	exit 0
fi
